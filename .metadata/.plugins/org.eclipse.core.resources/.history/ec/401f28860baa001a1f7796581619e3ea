    {
        user:dbConfig.user,
        password:dbConfig.password,
        connectString:dbConfig.connectString
    },
    function(err,connection){  
        if(err){
            console.error(err.message);
            return;
        }
        console.log('Connection was successful!');
        //console.log(connection);
