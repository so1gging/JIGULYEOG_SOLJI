$(function(){
   // var socket = io.connect("http://localhost:82");
    var chatkey ="";
    var receiveId ="";
    var sendId = "";
    
});

function viewChat(dm_id,dm_key){
	var dmKey = dm_key;
	var receiveId = dm_id;
	var sendId = '<c:out value="user.user_id"/>';
	
	$("#chatHeader").html(receiveId);
	$("#noWrap").css("display","none");
	$("#chatWrap").css("display","block");
	$("#chatLog").html("");
	
	$.ajax({
    	type:'POST',
		url:"friend.do?command=list",
		data: {"user_id":receiveId, "dm_id":sendId, "dm_key":dmkey},
		success : function(data){
			if(data.check==true){
				
				
			}
			var jsonInfo = JSON.parse(data);
			for(var i in jsonInfo ){
				var str = '<div class="anotherMsg">';
	            str += '<span class="anotherName">';
	            str += receiveId;
	            str += '</span>';
	            str += '<span class="msg">';
	            str += jsonInfo[i];
	            str += '</span>';
	            str += '</div>';
	            $("#chatLog").append(str);
			}
			
		},
		error:function(){
			alert("ajax : 통신 실패 ");
		}
    });
    
	
	 
}